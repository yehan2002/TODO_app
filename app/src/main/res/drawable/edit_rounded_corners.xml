<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="2.3dp"
                android:color="#0091EA" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <gradient
                android:startColor="#AAFEFEFE"
                android:centerColor="#AAFFFFFF"
                android:endColor="#AAFFFFFF"
                android:angle="270"
                />
            <stroke
                android:width="0.7dp"
                android:color="#AAFDFDFD" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"
                />
        </shape>
    </item>

</selector>
